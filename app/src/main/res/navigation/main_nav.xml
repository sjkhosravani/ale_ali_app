<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">


    <action
        android:id="@+id/action_to_examFragment"
        app:destination="@id/examFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="ir.mobfix.aleali.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="ir.mobfix.aleali.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="ir.mobfix.aleali.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ir.mobfix.aleali.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >

        <action
            android:id="@+id/action_profileFragment_to_edtProfFragment"
            app:destination="@id/edtProfFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ir.mobfix.aleali.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/claasFragment"
        android:name="ir.mobfix.aleali.ui.calss.ClaasFragment"
        android:label="fragment_claas"
        tools:layout="@layout/fragment_claas" />
    <fragment
        android:id="@+id/programFragment"
        android:name="ir.mobfix.aleali.ui.program.ProgramFragment"
        android:label="fragment_program"
        tools:layout="@layout/fragment_program" />
    <fragment
        android:id="@+id/edtProfFragment"
        android:name="ir.mobfix.aleali.ui.profileedite.EdtProfFragment"
        android:label="fragment_edt_prof"
        tools:layout="@layout/fragment_edt_prof" />
    <fragment
        android:id="@+id/webViewFragment"
        android:name="ir.mobfix.aleali.ui.webview.WebViewFragment"
        android:label="fragment_web_view"
        tools:layout="@layout/fragment_web_view" />
    <fragment
        android:id="@+id/examFragment"
        android:name="ir.mobfix.aleali.ui.exam.ExamFragment"
        android:label="fragment_exam"
        tools:layout="@layout/fragment_exam" >
        <argument
            android:name="userName"
            app:argType="string" />

    </fragment>
</navigation>