<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5mdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        android:alpha="0.5"
        app:cardBackgroundColor="@color/dimGray"
        app:cardCornerRadius="@dimen/_25mdp"
        android:layout_width="@dimen/_10mdp"
        android:layout_height="@dimen/_10mdp"/>
    <TextView
        android:id="@+id/firstNameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name_user"
        android:paddingHorizontal="@dimen/_5mdp"
        android:textColor="@color/lightSteelBlue"
        android:textSize="@dimen/_10font_mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btnMore"
        app:layout_constraintStart_toEndOf="@id/imgGray"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/round_chevron"
        app:layout_constraintBottom_toBottomOf="@id/firstNameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/firstNameTitle"
        app:tint="@color/lightSteelBlue" />

    <!--Line-->
    <View
        app:layout_constraintTop_toBottomOf="@id/firstNameTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/_5mdp"
        android:alpha="0.1"
        android:background="@color/lightSteelBlue" />


</androidx.constraintlayout.widget.ConstraintLayout>